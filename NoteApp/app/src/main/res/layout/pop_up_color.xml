<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="400dp"
    android:layout_height="300dp"
    android:background="#f2f2f2">
    <TextView
        android:textSize="25dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="30dp"
        android:text="@string/choose"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/popupText"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:background="@color/popupText">
            <TextView
                android:layout_span="2"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/popupText"/>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:weightSum="4"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp">
        <ImageView
            android:layout_weight="1"
            android:onClick="changeBackgroud"
            android:tag="#ffffff"
            android:id="@+id/iv_b1"
            android:layout_gravity="center"
            android:src="@drawable/square_white"
            android:layout_width="75px"
            android:layout_height="75px"/>
        <ImageView
            android:layout_weight="1"
            android:onClick="changeBackgroud"
            android:tag="#ffad33"
            android:id="@+id/iv_b2"
            android:layout_gravity="center"
            android:src="@drawable/square_ffad33"
            android:layout_width="75px"
            android:layout_height="75px" />
        <ImageView
            android:layout_weight="1"
            android:onClick="changeBackgroud"
            android:tag="#00ffbf"
            android:id="@+id/iv_b3"
            android:layout_gravity="center"
            android:src="@drawable/square_00ffbf"
            android:layout_width="75px"
            android:layout_height="75px" />
        <ImageView
            android:layout_weight="1"
            android:onClick="changeBackgroud"
            android:tag="#66d9ff"
            android:id="@+id/iv_b4"
            android:layout_gravity="center"
            android:src="@drawable/square_66d9ff"
            android:layout_width="75px"
            android:layout_height="75px" />

    </LinearLayout>
</LinearLayout>